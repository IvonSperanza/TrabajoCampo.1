generator client {
  provider = "prisma-client-js"  // ← IMPORTANTE: no "prisma-client"
  // podés omitir output para usar el default
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  firstName    String?
  lastName     String?
  isOwner      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  owner        Owner?
}
model Owner {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  cuit      String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}